{
  "name": "teste-software-backend",
  "version": "1.0.0",
  "description": "Backend API for Software Testing course project",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "typescript",
    "express",
    "prisma",
    "testing"
  ],
  "author": "Software Testing Course",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.4",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "4.0.4"
  }
}
