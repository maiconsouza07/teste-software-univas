{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["vitest", "node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

